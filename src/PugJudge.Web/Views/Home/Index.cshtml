@model PugJudge.Domain.ViewModels.LookupViewModel

@{
    ViewData["Title"] = "Character Judge";
}

<form asp-action="Lookup">
    <div class="form-horizontal">
        <h2>Character Judge</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Realm" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Realm" class="form-control" />
                <span asp-validation-for="Realm" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Judge" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
